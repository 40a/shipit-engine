<div class="wrapper">
  <section>
    <header class="section-header">
      <h1>Create a stack</h1>
    </header>
    <div class="setting-section">
      <%= form_for @stack do |f| %>
        <p>
          <%= f.label :repo_owner %>
          <%= f.text_field :repo_owner, placeholder: 'e.g. Shopify', required: true %>
        </p>
        <p>
          <%= f.label :repo_name %>
          <%= f.text_field :repo_name, required: true %>
        </p>
        <p>
          <%= f.label :branch %>
          <%= f.text_field :branch, placeholder: 'master' %>
        </p>
        <p>
          <%= f.label :environment %>
          <%= f.text_field :environment, placeholder: 'production' %>
        </p>
        <p>
          <%= f.label :deploy_url %>
          <%= f.text_field :deploy_url, placeholder: 'https://' %>
          <span class="helper-text">&#8592; where is this stack deployed to?</span>
        </p>
        <p><%= f.submit class: 'btn' %></p>
      <% end %>
    </div>

  </section>
</div>
